/* toastr */
.toastr
  position: fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  z-index: 1000

.toastr-inner
  position: absolute
  top: 50%
  left: 50%
  -webkit-transform: translate3d(-50%, -50%, 0)
  transform: translate3d(-50%, -50%, 0)
  display: inline-block
  height: 3rem
  padding: 0 1rem
  line-height: 3rem
  font-size: 1.5rem
  border-radius: 3px
  color: #fff
  background-color: rgba(0, 0, 0, 0.8)
